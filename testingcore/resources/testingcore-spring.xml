<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd">


    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ FOR OCC-API >> WEB SERVICES ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- D A O  layer -->
    <!-- define bean & add DAO IMPL for later webservices -->
    <bean id="testingWebServicesDao" class="de.hybris.platform.testingcore.dao.impl.TestingOccApiDaoImpl"
          name="customerDao">
        <!-- it takes 2 properties which are used out-of-the-box -->
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
        <property name="modelService" ref="modelService"/>
    </bean>

    <!-- S E R V I C E  layer -->
    <!-- define bean & add SERVICE IMPL for later webservices -->
    <alias name="testingWebServicesService" alias="testingWebServices" />
    <bean id="testingWebServicesService" class="de.hybris.platform.testingcore.service.impl.TestingOccApiService">
        <property name="testingOccApiDao" ref="testingWebServicesDao" />
    </bean>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->



    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ EMAIL PROCESS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- 1. HYBRIS TUBE -->
    <!-- a) PROCESS MAPPING == give mapping of HybrisTubeEmailProcess file -->
    <bean id="hybrisTubeEmailProcessDefinitionResource"
          class="de.hybris.platform.processengine.definition.ProcessDefinitionResource" >   <!-- see ProcessDefinitionResource class -->
        <property name="resource" value="classpath:/testingcore/processes/hybrisTubeEmailProcess.xml"/>
    </bean>
    <!-- b) ACTION MAPPING == give mapping to generateHybrisTubeEmailAction -->
    <bean id="generateHybrisTubeEmailAction" parent="abstractGenerateEmailAction">
        <property name="frontendTemplateName" value="HybrisTubeEmailTemplate"/>
        <!-- HybrisTubeEmailTemplate picked from the IMPEX !! -->
    </bean>
    <!-- c) EVENT LISTENER MAPPING == mapping of HybrisTubeEmailEventListener class -->
    <bean id="hybrisTubeEmailEventListener"
          class="de.hybris.platform.testingcore.event.HybrisTubeEmailEventListener" parent="abstractAcceleratorSiteEventListener">
        <property name="modelService" ref="modelService"/>
        <property name="businessProcessService" ref="businessProcessService"/>
    </bean>

    <!-- 2. TRAINING -->
    <!-- a) PROCESS MAPPING to TrainingEmailProcess -->
    <bean id="trainingEmailProcessDefinitionResource"
          class="de.hybris.platform.processengine.definition.ProcessDefinitionResource">    <!-- see ProcessDefinitionResource class -->
        <property name="resource" value="classpath:/testingcore/processes/trainingEmailProcess.xml" />
    </bean>
    <!-- b) ACTION MAPPING to generateTrainingEmailAction -->
    <bean id="generateTrainingEmailAction" parent="abstractGenerateEmailAction">
        <property name="frontendTemplateName" value="TrainingEmailTemplate" />
        <!-- TrainingEmailTemplate picked from the IMPEX !! -->
    </bean>
    <!-- c) LISTENER MAPPING of TrainingEmailEventListener class -->
    <bean id="trainingEmailEventListener"
          class="de.hybris.platform.testingcore.event.TrainingEmailEventListener" parent="abstractAcceleratorSiteEventListener">
        <property name="modelService" ref="modelService"/>
        <property name="businessProcessService" ref="businessProcessService"/>
    </bean>

    <!-- 3. CONSENT EMAIL PROCESS -->
    <!-- a) PROCESS MAPPING == give mapping of ConsentEmailProcess file -->
    <bean id="consentEmailProcessDefinitionResource"
          class="de.hybris.platform.processengine.definition.ProcessDefinitionResource" >   <!-- see ProcessDefinitionResource class -->
        <property name="resource" value="classpath:/testingcore/processes/consentEmailProcess.xml"/>
    </bean>
    <!-- b) ACTION MAPPING == give mapping to generateConsentEmailAction -->
    <bean id="generateConsentEmailAction" parent="abstractGenerateEmailAction">
        <property name="frontendTemplateName" value="consentEmailTemplate"/>
        <!-- HybrisTubeEmailTemplate picked from the IMPEX !! -->
    </bean>
    <!-- c) EVENT LISTENER MAPPING == mapping of ConsentEmailEventListener class -->
    <bean id="consentEmailEventListener"
          class="de.hybris.platform.testingcore.event.ConsentEmailEventListener" parent="abstractAcceleratorSiteEventListener">
        <property name="modelService" ref="modelService"/>
        <property name="businessProcessService" ref="businessProcessService"/>
    </bean>


    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ CRONJOBS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- 1 -->
    <alias name="testingProductListDao" alias="productListDao" />
    <bean id="testingProductListDao" class="de.hybris.platform.testingcore.dao.impl.ProductListResultDaoImpl" parent="defaultProductDao" />

    <bean id="customerListJobPerformable"
          class="de.hybris.platform.testingcore.job.CustomerListJobPerformable"
          parent="abstractJobPerformable">
        <property name="customerDao" ref="testingWebServicesDao" />
    </bean>
    <bean id="productListJobPerformable"
          class="de.hybris.platform.testingcore.job.ProductListJobPerformable"
          parent="abstractJobPerformable">
        <property name="productDao" ref="productListDao" />
    </bean>

    <!-- 2 -->
    <alias name="customFindAllCartsDao" alias="findAllCartsDao" />
    <bean id="customFindAllCartsDao" class="de.hybris.platform.testingcore.dao.impl.FindOldCartsDaoImpl" />

    <bean id="customTrainingCartRemovalJob"
          class="de.hybris.platform.testingcore.job.TrainingCartRemovalJob"
          parent="abstractJobPerformable">
        <property name="findOldCartsDao" ref="findAllCartsDao" />
    </bean>







