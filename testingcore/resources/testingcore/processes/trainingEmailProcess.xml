<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateTrainingEmail" name="trainingEmailProcess"
         processClass="de.hybris.platform.testingcore.model.custom.TrainingEmailProcessModel" onError="errorSending">
                                                                                <!-- define process bean trainingEmailProcess !!! -->

    <action id="generateTrainingEmail" bean="generateTrainingEmailAction">      <!-- define action bean !!! -->
        <transition name="OK" to="sendEmail"/>
        <transition name="NOK" to="error"/>
    </action>

    <action id="sendEmail" bean="sendEmail">                                    <!-- bean points to SendEmailAction class -->
        <transition name="OK" to="removeSentEmail"/>
        <transition name="NOK" to="failed"/>
    </action>

    <action id="removeSentEmail" bean="removeSentEmail">                        <!-- bean points to RemoveSentEmailAction class -->
        <transition name="OK" to="success"/>
        <transition name="NOK" to="error"/>
    </action>

    <end id="error" state="ERROR">Something went wrong.</end>
    <end id="errorSending" state="ERROR">Could not send Email.</end>
    <end id="failed" state="FAILED">Could not send forgotten password email.</end>
    <end id="success" state="SUCCEEDED">Sent Premium Eligibility email.</end>

</process>