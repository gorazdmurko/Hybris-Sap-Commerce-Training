<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateHybrisTubeEmail" name="hybrisTubeEmailProcess"
         processClass="de.hybris.platform.testingcore.model.custom.HybrisTubeEmailProcessModel" onError="errorSending">

    <!-- start action -->
    <action id="generateHybrisTubeEmail" bean="generateHybrisTubeEmailAction">      <!-- define bean !!! -->
        <transition name="OK" to="sendEmail"/>
        <transition name="NOK" to="error"/>
    </action>

    <action id="sendEmail" bean="sendEmail">                        <!-- bean points to SendEmailAction class -->
        <transition name="OK" to="removeSentEmail"/>
        <transition name="NOK" to="failed"/>
    </action>

    <action id="removeSentEmail" bean="removeSentEmail">            <!-- bean points to RemoveSentEmailAction class -->
        <transition name="OK" to="success"/>
        <transition name="NOK" to="error"/>
    </action>

    <end id="error" state="ERROR">Something went wrong.</end>
    <end id="errorSending" state="ERROR">Could not send Email.</end>
    <end id="failed" state="FAILED">Could not send email to owner of gold Cart.</end>
    <end id="success" state="SUCCEEDED">Email to Gold Cart Owner has been sent.</end>

</process>