<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="beans.xsd">

	<!-- 1. define ExternalTokenData DTO (which has an abc and value properties)  -->
	<bean class="de.hybris.platform.testingfacade.data.ExternalTokenData">
		<property name="abc" type="java.lang.String" />
		<property name="value" type="java.lang.String" />
	</bean>

	<!-- 2. !! EXTEND CustomerData DTO (!! just add a list of ExternalTokenData property to out-of-the-box existing class !!) -->
	<bean class="de.hybris.platform.commercefacades.user.data.CustomerData">
		<property name="externalTokens" type="java.util.List&lt;de.hybris.platform.testingfacade.data.ExternalTokenData&gt;" />
	</bean>

	<!-- 3. define CustomerList DTO which has single property customerList -->
	<bean class="de.hybris.platform.commercefacades.user.data.CustomerListData">
		<property name="customerList" type="java.util.List&lt;de.hybris.platform.commercefacades.user.data.CustomerData&gt;" />
	</bean>

