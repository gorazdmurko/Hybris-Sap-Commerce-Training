<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ FACADE ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--
        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ CONVERTERS / POPULATORS ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
            externalTokenDataPopulator
        =>  externalTokenDataConverter
        =>  customerDataPopulator
        =>  customerConverter
    -->

    <!-- 1. token POPULATOR - POJO class externalTokenDataPopulator -->
    <alias name="defaultTokenDataPopulator" alias="externalTokenDataPopulator" />
    <bean id="defaultTokenDataPopulator" class="de.hybris.platform.testingfacade.converters.populator.ExternalTokenDataPopulator" />

    <!-- token CONVERTER >> this converter uses (refers to) token POPULATOR (externalTokenDataPopulator) -->
    <alias name="defaultTokenDataConverter" alias="externalTokenDataConverter" />
    <bean id="defaultTokenDataConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.testingfacade.data.ExternalTokenData" />
        <property name="populators">
            <list>
                <ref bean="externalTokenDataPopulator" />
            </list>
        </property>
    </bean>

    <!-- 2. customer POPULATOR - POJO class customerDataPopulator -->
    <alias name="defaultCustomerDataPopulator" alias="customerDataPopulator" />
    <bean id="defaultCustomerDataPopulator" class="de.hybris.platform.testingfacade.converters.populator.CustomerDataPopulator">
        <property name="tokenConverter" ref="externalTokenDataConverter" />
    </bean>
    <!-- !!!! has a property tokenConverter, which REFERS TO above externalTokenDataConverter !!!!! -->
    <!-- !!! it uses setTokenConverter method from CustomerdataPopulator class !!! -->

    <!-- CONVERTER >> add customerDataPopulator from above to out-of-the-box customerConverter list -->
    <!-- located (out-of-the-box) in commercefacades-spring.xml between lines 590 & 606 -->
    <bean parent="modifyPopulatorList">
        <property name="list" ref="customerConverter"/>
        <property name="add"  ref="customerDataPopulator"/>
    </bean>

    <!-- 3. populates CustomerListData -->
    <!-- FLOW in custom FOR LOOP:
            customerListDataPopulator >> customerDataPopulator >>
            externalTokenDataConverter >> externalTokenDataPopulator
    -->
    <alias name="defaultCustomerListDataPopulator" alias="customerListDataPopulator" />
    <bean id="defaultCustomerListDataPopulator" class="de.hybris.platform.testingfacade.converters.populator.CustomerListDataPopulator">
        <property name="customerDataPopulator" ref="customerDataPopulator" />
        <property name="converter" ref="customerDataConverter" />
         <!-- <property name="service" ref="testingWebServices" /> -->
    </bean>

    <!-- 4. populates CustomerListData by names -->
    <!-- FLOW in Converter FOR LOOP:
            customerDataConverter >> customerDataPopulator >>
            externalTokenDataConverter >> externalTokenDataPopulator
    -->
    <alias name="defaultCustomerDataConverter" alias="customerDataConverter" />
    <bean id="defaultCustomerDataConverter" parent="abstractPopulatingConverter">
        <property name="targetClass" value="de.hybris.platform.commercefacades.user.data.CustomerData" />
        <property name="populators">
            <list>
                <ref bean="customerDataPopulator" />
            </list>
        </property>
    </bean>




    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ FOR OCC-API ONLY >> WEB SERVICES ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <!-- add Facade Bean -->
    <bean id="testingOccApiFacade" class="de.hybris.platform.testingfacade.facades.impl.TestingOccApiFacade">
        <property name="service" ref="testingWebServices" />        <!-- facade: alias="testingWebServices" -->
        <property name="populator" ref="customerDataPopulator" />   <!-- above: alias="customerDataPopulator" -->
        <property name="listPopulator" ref="customerListDataPopulator" />
        <property name="converter" ref="customerDataConverter" />
    </bean>




    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ MULTIPART RESOLVER ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- CommonsMultipartResolver -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="${cmswebservices.multipartresolver.upload.maxsize}" />
        <property name="maxInMemorySize" value="${cmswebservices.multipartresolver.memory.maxsize}" />
    </bean>



    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ EMAIL CONTEXT MAPPING ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- 1. HybrisTubeEmail CONTEXT -->
    <bean id="hybrisTubeEmailContext" class="de.hybris.platform.testingfacade.processes.email.context.HybrisTubeEmailContext"
          parent="abstractEmailContext" scope="prototype" >
        <property name="customerConverter" ref="customerConverter"/>
    </bean>
    <!-- 2. TrainingEmail CONTEXT -->
    <bean id="trainingEmailContext" class="de.hybris.platform.testingfacade.processes.email.context.TrainingEmailContext"
          parent="abstractEmailContext" scope="prototype" >
        <!--        <property name="customerConverter" ref="customerConverter"/>-->
    </bean>
    <!-- 3. ConsentEmail CONTEXT -->
    <bean id="consentEmailContext" class="de.hybris.platform.testingfacade.processes.email.context.ConsentEmailContext"
          parent="abstractEmailContext" scope="prototype" >
        <property name="customerConverter" ref="customerConverter"/>
<!--        <property name="subscriberConverter" ref="subscriberCustomerDataConverter"/>-->
    </bean>




