<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widgets.xsd">

    <widget-extension widgetId="backofficeMainSlot">
        <widget id="testingbackoffice-perspective" widgetDefinitionId="de.hybris.platform.testingbackoffice.widgets.testingbackofficewidget"
            template="false" slotId="perspectives" title="Hello testingbackoffice">
            <setting key="perspectiveImageUrl" value="/cng/images/perspective.png"
                type="String" />
        </widget>
    </widget-extension>

    <!-- MY CODE ~~ file upload -->
    <widget-extension widgetId="mainSlot">
        <widget id="fileImportFlowContextCreator"
                widgetDefinitionId="com.hybris.cockpitng.widgets.common.propextractor"
                slotId="cockpitWidgetChildrenInvisible" template="false">
            <setting key="expression" type="String">
                {
                    TYPE_CODE: #root,
                    configurableFlowConfigCtx: 'xml-product-import-wizard'
                }
            </setting>
            <setting key="socketDataType_$T" type="String">java.util.Map</setting>
            <virtual-sockets/>
        </widget>
    </widget-extension>
    <!-- It should listen node selection events in list-view-action widget -->
    <widget-connection sourceWidgetId="STUB_de.hybris.platform.testingbackoffice.actions.xmlProductImport" outputId="typeCode"
                       targetWidgetId="fileImportFlowContextCreator" inputId="genericInput" />
    <!-- When required navigation node is selected, the widget should send its id to the right panel be displayed in it -->
    <widget-connection sourceWidgetId="fileImportFlowContextCreator" outputId="genericOutput"
                       targetWidgetId="configurableFlow" inputId="context"/>   <!-- id="configurableFlow" ~~ backoffice-widgets.xml 154 -->



    <!-- MY CODE ~~ multiselect -->
    <widget-extension widgetId="mainSlot">
        <widget id="multiselectFlowContextCreator"
                widgetDefinitionId="com.hybris.cockpitng.widgets.common.propextractor"
                slotId="cockpitWidgetChildrenInvisible" template="false">
            <setting key="expression" type="String">
                {
                    TYPE_CODE: #root,
                    configurableFlowConfigCtx: 'multiple-products-select-wizard'
                }
            </setting>
            <setting key="socketDataType_$T" type="String">java.util.Map</setting>
            <virtual-sockets/>
        </widget>
    </widget-extension>
    <widget-connection sourceWidgetId="STUB_de.hybris.platform.testingbackoffice.actions.multipleProductsSelectAction" outputId="typeCode"
                       targetWidgetId="multiselectFlowContextCreator" inputId="genericInput" />
    <widget-connection sourceWidgetId="multiselectFlowContextCreator" outputId="genericOutput"
                       targetWidgetId="configurableFlow" inputId="context"/>


    <!-- MY CODE ~~ EXPORT test -->
    <widget-extension widgetId="mainSlot">
        <widget id="exportFlowContextCreator"
                widgetDefinitionId="com.hybris.cockpitng.widgets.common.propextractor"
                slotId="cockpitWidgetChildrenInvisible" template="false">
            <setting key="expression" type="String">
                {
                    TYPE_CODE:#root.typeCode,
                    configurableFlowConfigCtx:'export-wizard-test',
                    exportData:#root
                }
            </setting>
            <setting key="socketDataType_$T" type="String">java.util.Map</setting>
            <virtual-sockets/>
        </widget>
    </widget-extension>
    <widget-connection sourceWidgetId="STUB_de.hybris.platform.testingbackoffice.actions.export" outputId="itemsToExport"
                       targetWidgetId="exportFlowContextCreator" inputId="genericInput" />
    <widget-connection sourceWidgetId="exportFlowContextCreator" outputId="genericOutput"
                       targetWidgetId="configurableFlow" inputId="context" />



    <!--            W I D G E T S        -->

    <!-- custom mySearch widget -->
    <widget-extension widgetId="backofficeMainSlot">
        <widget id="MySearch - Custom" widgetDefinitionId="com.hybris.cockpitng.borderlayout" slotId="perspectives"
                template="false" title="MySearch - Custom">
            <widget id="mySearch" widgetDefinitionId="de.hybris.platform.testingbackoffice.widgets.mySearch" slotId="leftSlot"/>
