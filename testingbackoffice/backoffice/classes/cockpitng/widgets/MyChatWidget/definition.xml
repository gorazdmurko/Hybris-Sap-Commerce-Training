<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="de.hybris.platform.testingbackoffice.widgets.myChat"
                   xsi:noNamespaceSchemaLocation="http://hybris.com/cockpitng/widget-definition">

    <name>My Chat</name>
    <description>My chat widget.</description>

    <sockets>
        <input type="java.lang.String" id="incomingMsg"/>
        <output type="java.lang.String" id="outgoingMsg"/>
    </sockets>

    <view src="myChat.zul" />

    <keywords>
        <!-- keyword tag is used to define a category under which the widget is visible, when adding it to your application in application orchestrator  -->
        <keyword>Chat</keyword>
    </keywords>

    <controller class="de.hybris.platform.testingbackoffice.widgets.myChat.MyChatController" />

    <!-- parametrizing a widget -->
    <settings>
        <setting key="multi" type="Boolean" default-value="false"/>
        <setting key="history" type="Boolean" default-value="false"/>
    </settings>

</widget-definition>