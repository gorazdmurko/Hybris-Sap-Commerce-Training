<!--<?xml version="1.0" encoding="UTF-8"?>-->

<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="de.hybris.platform.testingbackoffice.actions.smiley"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Smiley-Action</name>
    <description>Action for testing purposes</description>
    <author>me</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.testingbackoffice.actions.Smiley</actionClassName>

    <!--
    https://help.sap.com/docs/SAP_COMMERCE/5c9ea0c629214e42b727bf08800d8dfa/8bd6833586691014a6e4949407a70b56.html?locale=en-US&version=6.5.0.0

        Actions and editors are components that can be used inside widgets.
        Normally, only widgets can send and receive data through sockets (are socket-aware).
        Nevertheless, in some cases you might need to make also actions and editors socket-aware.
    -->
    <sockets>
        <output id="typeCode" type="java.util.String" />
    </sockets>

    <iconUri>icons/smiley.png</iconUri>
    <iconHoverUri>icons/smiley_hover.png</iconHoverUri>
    <iconDisabledUri>icons/smiley_disabled.png</iconDisabledUri>

</action-definition>