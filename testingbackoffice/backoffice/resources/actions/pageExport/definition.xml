<?xml version="1.0" encoding="UTF-8"?>

<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="de.hybris.platform.testingbackoffice.actions.pageExport"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>Pageable Export</name>
    <description>Action for testing purposes</description>
    <author>Gorazd</author>
    <version>1.0</version>

    <actionClassName>de.hybris.platform.testingbackoffice.actions.PageExportAction</actionClassName>

    <iconUri>icons/page.png</iconUri>
    <iconHoverUri>icons/page_hover.png</iconHoverUri>
    <iconDisabledUri>icons/page_disabled.png</iconDisabledUri>


    <sockets>
        <output id="itemsToExport" type="com.hybris.cockpitng.search.data.pageable.Pageable" />
    </sockets>

    <inputType>com.hybris.cockpitng.search.data.pageable.Pageable</inputType>
    <outputType>com.hybris.cockpitng.search.data.pageable.Pageable</outputType>

    <settings>
        <setting key="confirmation.threshold" default-value="500" type="java.lang.Integer"/>
    </settings>

</action-definition>